@model IEnumerable<TP_PWEB.Models.Habitacoes>

@{
    ViewData["Title"] = "IndexHab";
}

<h1>Habitações</h1>

<p>
    <a asp-action="Create">Criar nova Habitação</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Localização
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                    <a href="#" class="sort-link" data-sort="asc">
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["PrecoSortParm"]">@Html.DisplayNameFor(model => model.Preco)</a>
                    @if (ViewData["PrecoSortParm"].ToString() == "preco_desc")
                    {
                        <span class="sort-icon">&#9660;</span> <!-- Seta para baixo indicando ordem decrescente -->
                    }
                    else if (ViewData["PrecoSortParm"].ToString() == "preco_asc")
                    {
                        <span class="sort-icon">&#9650;</span> <!-- Seta para cima indicando ordem crescente -->
                    }
                </a>
            </th>
            <th>
                Disponível
            </th>
            <th>
                Data Início Contrato
            </th>
            <th>
                Data Fim Contrato
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Locador)
            </th>
            <th>
                                <a href="#" class="sort-link" data-sort="asc">
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["AvaliacaoSortParm"]">@Html.DisplayNameFor(model => model.Avaliacao)</a>
                    @if (ViewData["AvaliacaoSortParm"].ToString() == "avaliacao_desc")
                    {
                        <span class="sort-icon">&#9660;</span> <!-- Seta para baixo indicando ordem decrescente -->
                    }
                    else if (ViewData["AvaliacaoSortParm"].ToString() == "avaliacao_asc")
                    {
                        <span class="sort-icon">&#9650;</span> <!-- Seta para cima indicando ordem crescente -->
                    }
                </a>
            </th>

        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Localizacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preco)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Disponivel)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataInicioContrato)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataFimContrato)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Locador)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Avaliacao)
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdHabitacoes">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdHabitacoes">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.IdHabitacoes">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
